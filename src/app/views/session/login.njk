{% extends 'layout.njk' %}

{% block content %}
    <div class="wrapper">
        <section class="login container">
        
            <a href="/home">
                <i id="back" class="material-icons">chevron_left</i>
            </a>

            <form action="/users/login" method="POST" >

                <div class="img">
                    <img src="/images/brasao.png" alt="">
                </div>

                <div class="content-form-login">

                    <div class="fields">
                        {% include 'session/fields.njk' %}
                    </div>

                    <button class="button" type="submit"> Entrar </button>

                    <div class="footer">
                        <ul>
                            <li>
                                <a href="/users/register">Registre-se</a>
                            </li>
                            <li>
                                <a href="/users/forgot-password">Esqueci minha senha</a>
                            </li>
                        </ul>
                    </div>

                </div>

                

            </form>
            
        </section>
    </div>
    

{% endblock content %}